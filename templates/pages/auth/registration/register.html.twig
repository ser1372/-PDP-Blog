{% extends 'layouts/base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="flex p-5 justify-center items-center min-h-[100vh]">
            {{ form_start(registrationForm, {
                attr: { class: "max-w-md mx-auto w-full text-white" }
            }) }}
            <h1 class="text-2xl font-bold mb-6 text-center">Sign up</h1>
            <div class="mb-4">
            {{ form_row(registrationForm.email, {
                attr: { class: 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer' }
            }) }}
            </div>

            <div class="mb-4">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                attr: { class: 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer' }
            }) }}
            </div>

            <div class="text-red-600">
            {{ form_errors(registrationForm) }}
            </div>

            <button class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-4 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" type="submit">
                Sign up
            </button>

            <div class="mt-4 text-center">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Already have an account? <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">Log in here</a>
                </p>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

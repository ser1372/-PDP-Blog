<div id="alert-modal" tabindex="-1" class="fixed inset-0 flex alert-modal items-center justify-center bg-gray-900 bg-opacity-50">
    <div class="
        bg-gray-900
        rounded-lg
        shadow-lg
        w-full
        max-w-md
        p-4
        {% if type == 'danger' %} border-red-500 {% elseif type == 'success' %} border-green-500 {% endif %}
        border-2">
        <h3 class="text-lg font-semibold
            {% if type == 'danger' %} text-red-700 {% elseif type == 'success' %} text-green-700 {% endif %}">
            {{ type|capitalize }}!
        </h3>
        <p class="mt-2 text-gray-600">{{ message }}</p>
        <div class="mt-4 flex justify-end space-x-2">
            <button class="px-4 close-modal close-alert py-2
                {% if type == 'danger' %} bg-red-500 hover:bg-red-600 {% elseif type == 'success' %} bg-green-500 hover:bg-green-600 {% endif %}
                text-white rounded-md">
                OK
            </button>
        </div>
    </div>
</div>


<script>
    const alertModals = document.querySelectorAll('.alert-modal');

    alertModals.forEach((modal) => {
        const closeButton = modal.querySelector('.close-alert');
        console.log(closeButton);
        if (closeButton) {
            closeButton.addEventListener('click', () => {
                modal.classList.add('hidden');
            });
        }
    });
</script>
